n.addEventListener(MouseEvent.CLICK,onButtonPush);			stage.addChild(btn);		}				//★の5点の座標を作って返すメソッド		public function makeStar(rad:int,grad:Number){		var pai = Math.PI; // 円周率		var starPoint:Array = []; //xy座標を交互に入れた配列				//1つ目の座標		starPoint.push(rad * Math.cos(grad));		starPoint.push(rad * Math.sin(grad));				//2つ目の座標		starPoint.push(rad * Math.cos(0.4*pai + grad));		starPoint.push(rad * Math.sin(0.4*pai + grad));				//3つ目の座標		starPoint.push(rad * Math.cos(0.8*pai + grad));		starPoint.push(rad * Math.sin(0.8*pai + grad));				//4つ目の座標		starPoint.push(rad * Math.cos(1.2*pai + grad));		starPoint.push(rad * Math.sin(1.2*pai + grad));				//5つ目の座標		starPoint.push(rad * Math.cos(1.6*pai + grad));		starPoint.push(rad * Math.sin(1.6*pai + grad));				return starPoint;	}				/**5件の検索をネットワーク越しにぶん投げて結果をXMLで受け取る*/		private function onButtonPush(e:MouseEvent):void {						//★の５点をStarクラスから貰ってくる			starPoints = makeStar(400,0.5*Math.PI);						//★のエッジを描く			drawEdge(starPoints[0],starPoints[1],0);			drawEdge(starPoints[2],starPoints[3],0);			drawEdge(starPoints[4],starPoints[5],0);			drawEdge(starPoints[6],starPoints[7],0);			drawEdge(starPoints[8],starPoints[9],0);						//ついでにノードを描く			drawNode(0,0,0,starPoints[0],starPoints[1],0);			drawNode(0,0,0,starPoints[2],starPoints[3],0);			drawNode(0,0,0,starPoints[4],starPoints[5],0);			drawNode(0,0,0,starPoints[6],starPoints[7],0);			drawNode(0,0,0,starPoints[8],starPoints[9],0);						//５つの検索を飛ばす			normalSearch(1);			//imgSearch();			//docSecrch();			//movieSearch();			//amazonSearch();		}				/**Yahoo!検索(通常の検索)を行う*/		public function normalSearch(page:int){						default xml namespace = new Namespace("urn:yahoo:jp:srch");						//URLを作る			var url = "http://search.yahooapis.jp/PremiumWebSearchService/V1/webSearch?appid=LFTNFXWxg66eYMmIvFGGF1qZLo8V8HMPgqMou_HBPPhe4p5LSNCf.lkFBRjKNtE-&query=" + text_field.text;						//XMLを読み込んで格納(URLLoader+URLRequest)			var loader:URLLoader = new URLLoader();			var request:URLRequest=new URLRequest(url);			loader.addEventListener(Event.COMPLETE,function(event:Event) {													//XMLから名前空間を削除				var res = new XML(event.target.data).removeNamespace("http://www.w3.org/2001/XMLSchema-instance");								//タイトル部分を検索１番目のものに変更・フォーマット上書き				title_field.text = res.Result[0].Title;				setTitleFormat(titleFmt,res.Result[0].Url);								//Summary部分も同様に変更・フォーマット上書き				disc_field.text = res.Result[0].Summary;				setDiscriptionFormat(discFmt,res.Result[0].Url);								//テキストフォーマットに設定し直す				title_field.setTextFormat(titleFmt);				disc_field.setTextFormat (discFmt);								//検索結果に対応するノードを20個描画する				for(var i=0; i<20;i++){					drawEdge(starPoints[0],starPoints[1],(-2000*(page-1))+(-100*i));				}			});			loader.load(request);		}				/**Yahoo!画像検索を行う*/		public function imgSearch(page:int){						default xml namespace = new Namespace("");						var url = "";			var loader:URLLoader = new URLLoader();			var request:URLRequest=new URLRequest(url);						loader.addEventListener(Event.COMPLETE,function(event:Event) {			});						loader.load(request);		}				/**Yahoo!検索(PDFのみ検索)を行う*/		public function docSecrch(page:int){						default xml namespace = new Namespace("");						var url = "";			var loader:URLLoader = new URLLoader();			var request:URLRequest=new URLRequest(url);						loader.addEventListener(Event.COMPLETE,function(event:Event) {			});						loader.load(request);		}				/**Youtube検索を行う*/		public function movieSearch(page:int){						default xml namespace = new Namespace("");						var url = "";			var loader:URLLoader = new URLLoader();			var request:URLRequest=new URLRequest(url);						loader.addEventListener(Event.COMPLETE,function(event:Event) {			});						loader.load(request);		}				/**Amazon商品検索を行う*/		public function amazonSearch(page:int){						default xml namespace = new Namespace("");						var url = "";			var loader:URLLoader = new URLLoader();			