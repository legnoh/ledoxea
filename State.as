package  {		import flash.display.Sprite;	import flash.text.TextField;	import flash.text.TextFormat;	/**ボタンの色を与えてボタンのデザインを形作るStateクラス*/	class State extends Sprite{			public function State(color:int,btnWeight:int){					graphics.lineStyle(1.0, color);			graphics.beginFill(0xFFFFFF);			graphics.drawRect(0, 0, btnWeight, 100);			graphics.endFill();	 			var tf:TextField = new TextField();			tf.defaultTextFormat = new TextFormat("_typeWriter", 20, color, true);			tf.text = "検索";			tf.autoSize = "left";			tf.x = (this.width  - tf.width)  / 2;			tf.y = (this.height - tf.height) / 2;			tf.selectable = false;			addChild(tf);		}	}}